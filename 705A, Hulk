n = int(input())
emotion_list = []
i = 1

while i < n + 1:
    if i == n:
        if i % 2 == 1:
            emotion_list.append("I hate it")
        else:
            emotion_list.append("I love it")
    else:
        if i % 2 == 1:
            emotion_list.append("I hate that")
        else:
            emotion_list.append("I love that")
    i += 1

print(" ".join(emotion_list))
